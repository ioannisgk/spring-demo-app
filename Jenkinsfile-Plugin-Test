pipeline {
    agent any
    environment {
        // Initialize the environment variable
        COUNTRY = ""
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/ioannisgk/spring-demo-app', branch: 'main'
            }
        }
        stage('Set Property') {
            steps {
                script {
                    def countryValue = "Greece"
                    
                    // 1. Set for UI display (Custom Build Properties section)
                    setCustomBuildProperty(
                        key: 'Country', 
                        value: countryValue
                    )
                    
                    // 2. Set as environment variable for pipeline use
                    env.COUNTRY = countryValue
                }
            }
        }
    }
}
