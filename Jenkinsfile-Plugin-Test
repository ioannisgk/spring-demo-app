pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/ioannisgk/spring-demo-app', branch: 'main'
            }
        }
        stage('Set Property') {
            steps {
                script {
                    // Set a custom property for the build
                    setCustomBuildProperty(
                        key: 'Country', 
                        value: 'Greece'
                    )
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying to ${env.Country}..."
            }
        }
    }
}
